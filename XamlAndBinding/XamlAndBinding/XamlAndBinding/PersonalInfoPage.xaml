<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamlAndBinding.PersonalInfoPage">
    <ContentPage.Content>
        <StackLayout>
            <Label>Resumen:</Label>
            <Label Text="{Binding Nombre}"></Label>
            <Label Text="{Binding Apellido}"></Label>
            <Button Text="Actualizar" x:Name="UpdateButton" Clicked="UpdateButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>